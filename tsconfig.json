{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": [
    "src/_lib/chroma",
    "src/_lib/converter",
    "src/_lib/bluetooth",
    "src/_lib/tfjsGoogle",
    "src/_lib/tfjs",
    "src/_lib/gpt",
    "src/_lib/uuid",
    "src/_lib/symbol",
    "src/_lib/threejs",
    "src/_lib/webrtc",
    "src/_lib/token",
    "src/_lib/spreadsheet",
    "src/_lib/pdf",
    "src/_lib/pdf2",
    "src/_lib/calendar",
    "src/_lib/geometry",
    "src/_lib/graphql",
    "src/_lib/websocket",
    "src/_lib/rsa",
    "src/_lib/fido",
    "src/_lib/encoder",
    "src/_lib/datetime",
    "src/_lib/prisma",
    "src/_lib/webgl",
    "src/_lib/qrcode",
    "src/_lib/image",
    "src/_lib/cookie",
    "src/_lib/_helper",
    "src/_lib/_test",
    "src/_lib/authentication",
    "src/_lib/http2",
    "src/_lib/indentification",
    "src/_lib/Math",
    "src/_lib/obj",
    "src/_lib/audio",
    "src/_lib/ocr",
    "functions/**/*",
  ]
}
